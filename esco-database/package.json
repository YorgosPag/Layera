{
  "name": "@layera/esco-database",
  "version": "1.0.0",
  "description": "Enterprise ESCO database import and management tools",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node scripts/import-esco.ts",
    "import:esco": "ts-node scripts/import-esco.ts",
    "import:dry-run": "ts-node scripts/import-esco.ts --dry-run",
    "import:emulator": "ts-node scripts/import-esco.ts --use-emulator",
    "import:production": "ts-node scripts/import-esco.ts --project layera-esco-prod",
    "validate": "ts-node scripts/validate-data.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm test",
    "setup:production": "bash scripts/setup-production.sh",
    "deploy": "bash scripts/deploy.sh",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "emulator:start": "firebase emulators:start --only firestore",
    "emulator:import": "npm run import:esco -- --use-emulator --project demo-test",
    "clean": "rm -rf dist coverage .firebase"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "keywords": [
    "esco",
    "firestore",
    "occupation",
    "skills",
    "taxonomy",
    "eu",
    "import"
  ],
  "author": "Layera",
  "license": "MIT"
}