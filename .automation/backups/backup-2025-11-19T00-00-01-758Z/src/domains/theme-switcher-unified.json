{
  "theme-switcher": {
    "comment": "ðŸŽ¨ Unified Theme Switcher System - Replaces 9+ fragmented classes",
    "unified": {
      "comment": "Single .layera-theme-switcher class with data attribute variants",
      "value": {
        "fontFamily": "var(--layera-la-global-fontFamily-system, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif)",
        "fontWeight": "500",
        "display": "inline-flex",
        "alignItems": "center",
        "justifyContent": "center",
        "cursor": "pointer",
        "userSelect": "none",
        "border": "1px solid var(--layera-color-border-primary)",
        "borderRadius": "var(--layera-global-borderRadius-md, 0.375rem)",
        "backgroundColor": "var(--layera-color-surface-secondary)",
        "color": "var(--layera-color-text-primary)",
        "transition": "var(--layera-transition-all-smooth)",
        "position": "relative",
        "WebkitFontSmoothing": "antialiased",
        "MozOsxFontSmoothing": "grayscale"
      },
      "type": "object",
      "variants": {
        "size": {
          "comment": "Size variants - WCAG 2.1 compliant minimum touch targets",
          "sm": {
            "width": "var(--layera-global-spacing-8)",
            "height": "var(--layera-global-spacing-8)",
            "padding": "var(--layera-global-spacing-1)"
          },
          "md": {
            "width": "var(--layera-global-spacing-10)",
            "height": "var(--layera-global-spacing-10)",
            "padding": "var(--layera-global-spacing-1-5)"
          },
          "lg": {
            "width": "var(--layera-global-spacing-12)",
            "height": "var(--layera-global-spacing-12)",
            "padding": "var(--layera-global-spacing-2)"
          }
        },
        "variant": {
          "comment": "Visual and functional variants",
          "icon": {
            "aspectRatio": "1",
            "padding": "0"
          },
          "button": {
            "width": "auto",
            "padding": "var(--layera-global-spacing-2) var(--layera-global-spacing-4)",
            "gap": "var(--layera-global-spacing-2)"
          },
          "dropdown": {
            "width": "auto",
            "padding": "var(--layera-global-spacing-3) var(--layera-global-spacing-4)",
            "gap": "var(--layera-global-spacing-2)"
          }
        },
        "state": {
          "comment": "Interactive states",
          "default": {},
          "hover": {
            "backgroundColor": "var(--layera-color-surface-primary)",
            "borderColor": "var(--layera-color-border-secondary)"
          },
          "active": {
            "backgroundColor": "var(--layera-color-surface-primary)"
          },
          "focus": {
            "outline": "none",
            "boxShadow": "var(--layera-global-outline-focus, 0 0 0 2px var(--layera-color-semantic-info-primary))"
          },
          "disabled": {
            "opacity": "0.6",
            "cursor": "not-allowed"
          }
        },
        "position": {
          "comment": "Dropdown positioning variants",
          "left": {
            "left": "0"
          },
          "right": {
            "right": "0"
          },
          "center": {
            "left": "var(--layera-global-position-center)",
            "transform": "translateX(var(--layera-global-transform-center-x))"
          }
        }
      }
    }
  }
}