{
  "i18n": {
    "comment": "üåç Enterprise Internationalization System - Complete I18N Support",
    "unified": {
      "comment": "Unified i18n class - replaces multiple fragmented classes",
      "value": {
        "position": "relative",
        "boxSizing": "border-box",
        "transition": "all 0.2s ease",
        "fontFamily": "inherit",
        "fontSize": "inherit",
        "lineHeight": "inherit"
      },
      "type": "object",
      "variants": {
        "direction": {
          "comment": "Text and layout direction variants",
          "ltr": {
            "direction": "ltr",
            "textAlign": "left",
            "unicodeBidi": "embed"
          },
          "rtl": {
            "direction": "rtl",
            "textAlign": "right",
            "unicodeBidi": "embed"
          },
          "auto": {
            "direction": "auto",
            "textAlign": "start",
            "unicodeBidi": "plaintext"
          }
        },
        "locale": {
          "comment": "Layera App Locales - ŒúœåŒΩŒø ŒïŒªŒªŒ∑ŒΩŒπŒ∫Œ¨ Œ∫Œ±Œπ ŒëŒ≥Œ≥ŒªŒπŒ∫Œ¨",
          "el": {
            "fontFamily": "var(--layera-la-global-fontFamily-system, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif)",
            "direction": "ltr",
            "textAlign": "left",
            "lineHeight": "1.5"
          },
          "en": {
            "fontFamily": "var(--layera-la-global-fontFamily-system, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif)",
            "direction": "ltr",
            "textAlign": "left",
            "lineHeight": "1.5"
          }
        },
        "layout": {
          "comment": "Layout-specific adaptations for internationalization",
          "flip": {
            "transform": "scaleX(-1)"
          },
          "mirror": {
            "transform": "rotateY(180deg)"
          },
          "preserve": {
            "transform": "none"
          }
        },
        "spacing": {
          "comment": "Cultural spacing adaptations",
          "rtl": {
            "marginLeft": "auto",
            "marginRight": "0",
            "paddingLeft": "inherit",
            "paddingRight": "0"
          },
          "ltr": {
            "marginLeft": "0",
            "marginRight": "auto",
            "paddingLeft": "0",
            "paddingRight": "inherit"
          },
          "balanced": {
            "marginLeft": "auto",
            "marginRight": "auto",
            "textAlign": "center"
          }
        },
        "content": {
          "comment": "Content-specific adaptations",
          "numeric": {
            "fontVariantNumeric": "tabular-nums",
            "direction": "ltr",
            "unicodeBidi": "bidi-override"
          },
          "currency": {
            "fontVariantNumeric": "tabular-nums",
            "whiteSpace": "nowrap"
          },
          "date": {
            "fontVariantNumeric": "tabular-nums",
            "direction": "ltr"
          },
          "time": {
            "fontVariantNumeric": "tabular-nums",
            "fontFeatureSettings": "'tnum'"
          }
        },
        "reading": {
          "comment": "Reading pattern adaptations",
          "horizontal": {
            "writingMode": "horizontal-tb",
            "textOrientation": "mixed"
          },
          "vertical": {
            "writingMode": "vertical-rl",
            "textOrientation": "mixed"
          },
          "vertical-lr": {
            "writingMode": "vertical-lr",
            "textOrientation": "mixed"
          }
        }
      }
    }
  }
