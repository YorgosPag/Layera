{
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.pnpm-store": true,
    "**/layera_OLD": true,
    "**/.next": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.pnpm-store/**": true,
    "**/layera_OLD/**": true,
    "**/.next/**": true,
    "**/coverage/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.pnpm-store": true,
    "**/layera_OLD": true,
    "**/.next": true,
    "**/coverage": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "git.ignoreLimitWarning": true,
  "files.associations": {
    "*.mjs": "javascript"
  }
}