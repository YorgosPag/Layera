{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Enterprise configuration */
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Path mapping for workspace packages */
    "baseUrl": ".",
    "paths": {
      "@layera/*": ["packages/*/src"]
    }
  },
  "include": [
    "types/vendor-shims.d.ts",
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build"
  ],
  "references": [
    { "path": "./packages/constants" },
    { "path": "./packages/loading" },
    { "path": "./packages/notifications" },
    { "path": "./packages/typography" },
    { "path": "./packages/buttons" },
    { "path": "./packages/cards" },
    { "path": "./packages/icons" },
    { "path": "./packages/layout" },
    { "path": "./apps/layera-geoalert" },
    { "path": "./apps/layera-id" }
  ]
}