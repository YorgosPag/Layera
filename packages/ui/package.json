{
  "name": "@layera/ui",
  "version": "1.0.0",
  "description": "Layera UI Components - Unified export aggregator for all UI packages",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "types:build": "tsc -p tsconfig.json",
    "api:check": "api-extractor run --local",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ui",
    "components",
    "design-system",
    "layera",
    "enterprise",
    "react",
    "typescript",
    "aggregator"
  ],
  "author": "Layera",
  "license": "MIT",
  "dependencies": {
    "@layera/buttons": "workspace:*",
    "@layera/cards": "workspace:*",
    "@layera/forms": "workspace:*",
    "@layera/typography": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  }
}