{
  "name": "@layera/layout",
  "version": "1.0.0",
  "description": "Layera Layout System - Enterprise UI Components for unified app experiences",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./minimal": {
      "types": "./dist/index.minimal.d.ts",
      "import": "./dist/index.minimal.js",
      "require": "./dist/index.minimal.cjs"
    },
    "./sizing": {
      "types": "./dist/exports/sizing.d.ts",
      "import": "./dist/exports/sizing.js",
      "require": "./dist/exports/sizing.cjs"
    },
    "./shortcuts": {
      "types": "./dist/exports/shortcuts.d.ts",
      "import": "./dist/exports/shortcuts.js",
      "require": "./dist/exports/shortcuts.cjs"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && npm run build:css",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "dev": "npm run build -- --watch",
    "types:build": "tsc -p tsconfig.json",
    "api:check": "api-extractor run --local",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0"
  },
  "keywords": [
    "layout",
    "components",
    "ui",
    "design-system",
    "layera",
    "enterprise",
    "react",
    "typescript",
    "responsive"
  ],
  "author": "Layera",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "autoprefixer": "^10.4.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0"
  }
}