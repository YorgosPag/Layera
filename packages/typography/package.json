{
  "name": "@layera/typography",
  "version": "1.0.0",
  "description": "Enterprise Typography System for Layera ecosystem",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && npm run build:css",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "dev": "npm run build -- --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0"
  },
  "keywords": [
    "typography",
    "fonts",
    "design-system",
    "layera",
    "enterprise"
  ],
  "author": "Layera",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@layera/tokens": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0"
  }
}