{
  "name": "@layera/i18n",
  "version": "1.0.0",
  "description": "Enterprise-grade internationalization package for Layera applications",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./locales/*": "./src/locales/*"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "extract": "i18next-scanner --config i18next-scanner.config.js"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "react",
    "typescript",
    "enterprise"
  ],
  "author": "Layera Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "i18next": "^23.7.16",
    "react-i18next": "^13.5.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "i18next-scanner": "^4.4.0",
    "rollup": "^4.26.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "src/locales",
    "README.md"
  ]
}