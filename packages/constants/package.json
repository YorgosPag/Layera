{
  "name": "@layera/constants",
  "version": "1.0.0",
  "description": "Centralized constants and configuration values for the Layera design system",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "dev:sync": "concurrently \"npm run dev\" \"node sync-dist-to-src.js --watch\"",
    "sync": "node sync-dist-to-src.js",
    "typecheck": "tsc --noEmit",
    "api:check": "api-extractor run --local"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "layera",
    "constants",
    "design-system",
    "enterprise"
  ],
  "author": "Layera Team",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}