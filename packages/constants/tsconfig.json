{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "../..",
    "paths": {
      "@layera/*": ["packages/*/src/index.ts", "packages/*/src"]
    }
  },
  "include": ["src"]
}