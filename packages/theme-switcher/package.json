{
  "name": "@layera/theme-switcher",
  "version": "1.0.0",
  "description": "Enterprise Theme System με Dark/Light Mode για Layera ecosystem",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && npm run build:css",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "dev": "npm run build -- --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0"
  },
  "keywords": [
    "theme-switcher",
    "dark-mode",
    "light-mode",
    "theming",
    "ui-components",
    "design-system",
    "layera",
    "enterprise",
    "accessibility",
    "wcag"
  ],
  "author": "Layera",
  "license": "MIT",
  "dependencies": {
    "@layera/layout": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "eslint": "^8.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0"
  }
}