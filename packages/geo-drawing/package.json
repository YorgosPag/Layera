{
  "name": "@layera/geo-drawing",
  "version": "1.0.0",
  "description": "LEGO System for geo-spatial drawing, measurement, and geometry rendering with OSM integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "verify": "npm run typecheck && npm run lint --max-warnings=0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "leaflet": "^1.9.4",
    "@layera/constants": "workspace:*",
    "@layera/geo-core": "workspace:*",
    "@layera/geo-mapping": "workspace:*",
    "@layera/i18n": "workspace:*",
    "@layera/theme-switcher": "workspace:*",
    "@layera/error-boundary": "workspace:*",
    "@layera/notifications": "workspace:*",
    "@layera/loading": "workspace:*",
    "@layera/buttons": "workspace:*",
    "@layera/icons": "workspace:*",
    "@layera/typography": "workspace:*",
    "@layera/layout": "workspace:*",
    "@layera/cards": "workspace:*",
    "@layera/forms": "workspace:*",
    "@layera/snap-engine": "workspace:*",
    "@layera/snap-interactions": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/leaflet": "^1.9.8",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "layera",
    "lego",
    "geo-drawing",
    "measurement",
    "leaflet",
    "osm",
    "geometry",
    "spatial"
  ],
  "author": "Layera Team",
  "license": "MIT"
}