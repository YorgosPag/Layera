{
  "name": "geo-platform-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:app\" \"npm:dev:server\"",
    "dev:app": "npm run dev -w @geo-platform/app",
    "dev:server": "npm run dev -w @geo-platform/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "~5.8.2"
  }
}